{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GKTimer",
  "version": "0.1.0",
  "identifier": "com.gktimer.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "GKTimer",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis", "dmg"],
    "icon": [
      "../icons/icon.icns"
    ]
  }
}
