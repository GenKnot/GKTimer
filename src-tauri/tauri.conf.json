{
  "package": {
    "productName": "GKTimer",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APPDATA/**", "$APPDATA/**/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.gktimer.app",
      "icon": [
        "../icons/icon.icns"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GKTimer",
        "width": 1000,
        "height": 700
      }
    ]
  }
}
